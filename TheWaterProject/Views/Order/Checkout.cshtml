@model Order

<h2>Check out now</h2>
<p>Please enter your details, and we'll send your donation right away!</p>
<div asp-validation-summary="All" class="text-danger"></div>


<form asp-action="Checkout" method="post">
<h3>Ship to</h3>
<div class="form-group">
    <label>Name:</label>
    <input asp-for="Name" class="form-control" />
</div><br>
<h3>Address</h3>
<div class="form-group">
    <label>Line 1:</label>
    <input asp-for="Line1" class="form-control" />
</div><br>
<div class="form-group">
    <label>Line 2:</label>
    <input asp-for="Line2" class="form-control" />
</div><br>
<div class="form-group">
    <label>Line 3:</label>
    <input asp-for="Line3" class="form-control" />
</div><br>
<div class="form-group">
    <label>City:</label>
    <input asp-for="City" class="form-control" />
</div><br>
<div class="form-group">
    <label>State:</label>
    <input asp-for="State" class="form-control" />
</div><br>
<div class="form-group">
    <label>Zip:</label>
    <input asp-for="Zip" class="form-control" />
</div><br>
<div class="form-group">
    <label>Country:</label>
    <input asp-for="Country" class="form-control" />
</div><br>
<h3>Options</h3><br>
<div class="form-group">
    <label>Email:</label>
    <input asp-for="Email" class="form-control" />
</div><br>
<div class="form-check">
   <input class="form-check-input" type="checkbox" id="EmailUpdates" name="EmailUpdates" value="true" />
   <label class="form-check-label" for="EmailUpdates">Check here if you'd like to receive updates and news about future projects.</label>
</div><br>
<div class="text-center">
    <input class="btn btn-primary" type="submit" 
           value="Complete Order" />
</div>
</form>
